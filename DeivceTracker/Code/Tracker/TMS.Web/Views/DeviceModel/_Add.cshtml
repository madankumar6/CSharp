@model TMS.Web.Models.ViewModels.DeviceModelViewModel
@using TMS.Model
<div class="row">
    <div class="col-md-12">
        <div class="">

            @using (Html.BeginForm("Add", "DeviceModel", FormMethod.Post, new { id = "EditCustomerForm", @role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="box-body">
                    @Html.HiddenFor(m => m.DeviceId)
                    @Html.Hidden("DeviceUserId")
                    @*@Html.Hidden("TypeId")*@
                    <table style="width: 100%; vertical-align: top;">
                        <tr>
                            <td style="vertical-align: top; padding-right: 10px;">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.VehicleNo)
                                    @Html.TextBoxFor(m => m.VehicleNo, new { @class = "form-control col-md-6", @placeholder = " ", @required = "true" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Make)
                                    @Html.TextBoxFor(m => m.Make, new { @class = "form-control col-md-6", @placeholder = " ", @required = "true" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.VehicleModel)
                                    @Html.TextBoxFor(m => m.VehicleModel, new { @class = "form-control col-md-6", @placeholder = " ", @required = "true" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.PrimaryMobile)
                                    @Html.TextBoxFor(m => m.PrimaryMobile, new { @class = "form-control col-md-6", @placeholder = " ", @required = "true" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.SecondaryMobile)
                                    @Html.TextBoxFor(m => m.SecondaryMobile, new { @class = "form-control col-md-6", @placeholder = " ", @required = "true" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.VehicleType)
                                    <br />
                                    <select name="VehicleType" id="VehicleType" class="form-control col-md-6">
                                        <option value="" selected>Please Select</option>
                                        <option value="Car">Car</option>
                                        <option value="Bike">Bike</option>
                                        <option value="Truck">Truck</option>
                                        <option value="Lorry">Lorry</option>
                                        <option value="Bus">Bus</option>
                                        <option value="JCB">JCB</option>
                                        <option value="Tractor">Tractor</option>
                                        </select>
                                    @*  @Html.TextBoxFor(m => m.VehicleType, new { @class = "form-control col-md-6", @placeholder = " ", @required = "true" })*@
                                </div>
                                <div class="form-group">
                                    @Html.Label("Device Model")
                                    @if (Session["UserData"] is Admin)
                                    {
                                        var devcetypeList = ViewData["DeviceTypeList"] as SelectList;
                                        @Html.DropDownListFor(m => m.DeviceType, devcetypeList, "Select a Device Model", new { @class = "form-control" })
                                    }
                                </div>

                            </td>
                            <td style="vertical-align: top; padding-left: 10px;">
                                <div class="form-group">
                                    @Html.Label("Distributor")
                                    @if (Session["UserData"] is Admin)
                                    {
                                        var distributorList = ViewData["DistributorList"] as SelectList;
                                        @Html.DropDownList("distributorId", distributorList, "Select a Distributor", new { @class = "form-control" })
                                    }
                                </div>
                                <div class="form-group">
                                    @Html.Label("Dealer")
                                    @if (Session["UserData"] is Admin)
                                    {
                                        var dealerList = ViewData["DealerList"] as SelectList;
                                        @Html.DropDownList("dealerId", dealerList, "Select a Dealer", new { @class = "form-control" })
                                    }
                                </div>
                                <div class="form-group">
                                    @Html.Label("Customer")
                                    @if (Session["UserData"] is Admin)
                                    {
                                        var dealerList = ViewData["CustomerList"] as SelectList;
                                        @Html.DropDownList("customerId", dealerList, "Select a Customer", new { @class = "form-control" })
                                    }
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.IMEINo)
                                    @Html.TextBoxFor(m => m.IMEINo, new { @class = "form-control col-md-6", @placeholder = " ", @required = "true" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.SimNetwork)
                                    @Html.TextBoxFor(m => m.SimNetwork, new { @class = "form-control col-md-6", @placeholder = " ", @required = "true" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.DeviceSimNo)
                                    @Html.TextBoxFor(m => m.DeviceSimNo, new { @class = "form-control col-md-6", @placeholder = " ", @required = "true" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Mail)
                                    @Html.TextBoxFor(m => m.Mail, new { @class = "form-control col-md-6", @placeholder = " ", @required = "true" })
                                </div>

                                <div class="form-group">
                                    @Html.Label("Time Zone")
                                    <br />
                                    <select name="DropDownTimezone" id="DropDownTimezone">
                                        <option value="" selected>Please Select</option>
                                        <option value="-12.0">(GMT -12:00) Eniwetok, Kwajalein</option>
                                        <option value="-11.0">(GMT -11:00) Midway Island, Samoa</option>
                                        <option value="-10.0">(GMT -10:00) Hawaii</option>
                                        <option value="-9.0">(GMT -9:00) Alaska</option>
                                        <option value="-8.0">(GMT -8:00) Pacific Time (US &amp; Canada)</option>
                                        <option value="-7.0">(GMT -7:00) Mountain Time (US &amp; Canada)</option>
                                        <option value="-6.0">(GMT -6:00) Central Time (US &amp; Canada), Mexico City</option>
                                        <option value="-5.0">(GMT -5:00) Eastern Time (US &amp; Canada), Bogota, Lima</option>
                                        <option value="-4.0">(GMT -4:00) Atlantic Time (Canada), Caracas, La Paz</option>
                                        <option value="-3.5">(GMT -3:30) Newfoundland</option>
                                        <option value="-3.0">(GMT -3:00) Brazil, Buenos Aires, Georgetown</option>
                                        <option value="-2.0">(GMT -2:00) Mid-Atlantic</option>
                                        <option value="-1.0">(GMT -1:00 hour) Azores, Cape Verde Islands</option>
                                        <option value="0.0">(GMT) Western Europe Time, London, Lisbon, Casablanca</option>
                                        <option value="1.0">(GMT +1:00 hour) Brussels, Copenhagen, Madrid, Paris</option>
                                        <option value="2.0">(GMT +2:00) Kaliningrad, South Africa</option>
                                        <option value="3.0">(GMT +3:00) Baghdad, Riyadh, Moscow, St. Petersburg</option>
                                        <option value="3.5">(GMT +3:30) Tehran</option>
                                        <option value="4.0">(GMT +4:00) Abu Dhabi, Muscat, Baku, Tbilisi</option>
                                        <option value="4.5">(GMT +4:30) Kabul</option>
                                        <option value="5.0">(GMT +5:00) Ekaterinburg, Islamabad, Karachi, Tashkent</option>
                                        <option value="5.5" selected>(GMT +5:30) Bombay, Calcutta, Madras, New Delhi</option>
                                        <option value="5.75">(GMT +5:45) Kathmandu</option>
                                        <option value="6.0">(GMT +6:00) Almaty, Dhaka, Colombo</option>
                                        <option value="7.0">(GMT +7:00) Bangkok, Hanoi, Jakarta</option>
                                        <option value="8.0">(GMT +8:00) Beijing, Perth, Singapore, Hong Kong</option>
                                        <option value="9.0">(GMT +9:00) Tokyo, Seoul, Osaka, Sapporo, Yakutsk</option>
                                        <option value="9.5">(GMT +9:30) Adelaide, Darwin</option>
                                        <option value="10.0">(GMT +10:00) Eastern Australia, Guam, Vladivostok</option>
                                        <option value="11.0">(GMT +11:00) Magadan, Solomon Islands, New Caledonia</option>
                                        <option value="12.0">(GMT +12:00) Auckland, Wellington, Fiji, Kamchatka</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Expiry Date")
                                    @Html.TextBoxFor(m => m.ToExpiry, new { @class = "form-control col-md-6", @placeholder = " ", @required = "true" })
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            }
        </div>
    </div>
</div>