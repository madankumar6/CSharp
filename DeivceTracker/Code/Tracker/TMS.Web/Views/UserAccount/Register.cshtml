@using TMS.Web.Models.ViewModels
@model RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Register :: TMS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Easy Admin Panel Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/bootstrap.min.css" rel='stylesheet' type='text/css' />
    <!-- Custom CSS -->
    <link href="~/Content/style.css" rel='stylesheet' type='text/css' />
    <!-- jQuery -->
    <!-- lined-icons -->
    <link rel="stylesheet" href="~/Content/icon-font.min.css" type='text/css' />
    <!-- //lined-icons -->
    <!--animate-->
    <link href="~/Content/animate.css" rel="stylesheet" type="text/css" media="all">
    <script src="~/Scripts/wow.min.js"></script>
    <script>
        new WOW().init();
    </script>
    <!--//end-animate-->
    <!----webfonts--->
    <link href='/Content/family-Cabin-400-400italic-500-500italic-600-600italic-700-700italic.css' rel='stylesheet' type='text/css'>
    <!---//webfonts--->
    <script src="/Scripts/jquery-1.10.2.min.js"></script>
    <!-- Placed js at the end of the document so the pages load faster -->

</head>
<body class="sign-in-up">
    <section>
        <div id="page-wrapper" class="sign-in-wrapper">
            <div class="graphs">
                <div class="sign-up">
                    <h3>Register Here</h3>
                    <p class="creating">
                        Tracker Management System
                    </p>
                    @using (Html.BeginForm("Register", "UserAccount", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <h5>Personal Information</h5>
                        <div class="sign-u">
                            <div class="sign-up1">
                                <h4>First Name* :</h4>
                            </div>
                            <div class="sign-up2">
                                @Html.TextBoxFor(m => m.FirstName, new { @placeholder = " ", @required = " " })
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                        <div class="sign-u">
                            <div class="sign-up1">
                                <h4>Last Name* :</h4>
                            </div>
                            <div class="sign-up2">
                                @Html.TextBoxFor(m => m.LastName, new { @placeholder = " ", @required = " " })
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                        <div class="sign-u">
                            <div class="sign-up1">
                                <h4>Email Address* :</h4>
                            </div>
                            <div class="sign-up2">
                                @Html.TextBoxFor(m => m.Email, new { @placeholder = " ", @required = " " })
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                        <h6>Login Information</h6>
                        <div class="sign-u">
                            <div class="sign-up1">
                                <h4>Username* :</h4>
                            </div>
                            <div class="sign-up2">
                                @Html.TextBoxFor(m => m.Username, new { @placeholder = " ", @required = " " })
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                        <div class="sign-u">
                            <div class="sign-up1">
                                <h4>Password* :</h4>
                            </div>
                            <div class="sign-up2">
                                @Html.PasswordFor(m => m.Password, new { @placeholder = " ", @required = " " })
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                        <div class="sign-u">
                            <div class="sign-up1">
                                <h4>Confirm Password* :</h4>
                            </div>
                            <div class="sign-up2">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = " ", @required = " " })
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                        <div class="sub_home">
                            <div class="sub_home_left">
                                    <input type="submit" value="Submit">
                            </div>
                            <div class="sub_home_right">
                                <p>Go Back to <a href="index.html">Home</a></p>
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!--footer section start-->
        <footer>
            <p>&copy; 2015 TMS. All Rights Reserved | Design by <a href="http://noobiecode.com/" target="_blank">NoobieCode</a></p>
        </footer>
        <!--footer section end-->
    </section>

    <script src="~/Scripts/jquery.nicescroll.js"></script>
    <script src="~/Scripts/scripts.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
