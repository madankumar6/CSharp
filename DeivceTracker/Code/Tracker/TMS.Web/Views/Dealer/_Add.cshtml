@using TMS.Model
@using TMS.Web.Rules
@model TMS.Web.Models.ViewModels.DealerViewModel

<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Add a New Dealer</h3>
            </div>

            @using (Html.BeginForm("Add", "Dealer", FormMethod.Post, new { enctype="multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.FirstName)
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = " ", @required = "true" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.LastName)
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = " ", @required = "true" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Dealer Code")
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = " ", @required = "true" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new {@class = "form-control", @placeholder = " ", @required = "true"})
                    </div>
                    <div class="form-group">
                        @{
                            @Html.Label("Distributor")
                            if (Session["UserData"] is Admin)
                            {
                                var distributorList = ViewData["DistributorList"] as SelectList;
                                @Html.DropDownList("distributorId", distributorList, new { @class = "form-control" })
                            }
                        }
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new {@class = "form-control", @placeholder = " ", @required = "true"})
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.PhoneNo)
                        @Html.TextBoxFor(m => m.PhoneNo, new { @class = "form-control", @placeholder = " ", @required = "true" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address.AddressLine1)
                        @Html.TextBoxFor(m => m.Address.AddressLine1, new { @class = "form-control", @placeholder = " ", @required = "true" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address.AddressLine2)
                        @Html.TextBoxFor(m => m.Address.AddressLine2, new { @class = "form-control", @placeholder = " ", @required = "false" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address.AddressLine3)
                        @Html.TextBoxFor(m => m.Address.AddressLine3, new { @class = "form-control", @placeholder = " ", @required = "false" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address.City)
                        @Html.TextBoxFor(m => m.Address.City, new { @class = "form-control", @placeholder = " ", @required = "true" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address.State)
                        @Html.TextBoxFor(m => m.Address.State, new { @class = "form-control", @placeholder = " ", @required = "true" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address.Country)
                        @Html.TextBoxFor(m => m.Address.Country, new { @class = "form-control", @placeholder = " ", @required = "true" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address.PostalCode)
                        @Html.TextBoxFor(m => m.Address.PostalCode, new { @class = "form-control", @placeholder = " ", @required = "true" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.WebSite)
                        @Html.TextBoxFor(m => m.WebSite, new { @class = "form-control", @placeholder = " ", @required = "false" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Logo)
                        <input type="file" id="fileUpload" name="fileUpload" multiple />
                        @*<div id="image_holder"></div>*@
                    </div>
                </div>

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            }
        </div>
    </div>
    
</div>


