@{
    Layout = "~/Views/Shared/_GoogleMapLayout.cshtml";
}
<div ng-app="Tracker" ng-controller="mapCtrl" style="display: table; width: 100%;">
    <div style="display: table-cell; width: 200px; vertical-align: top;">
        <div class="height-adjust" style="overflow: auto;">
            <ul style="list-style: none; padding: 0; margin: 0;">
                <li ng-repeat="device in Devices"  ng-click="SetCurrentDevice(device.deviceId)" 
                    style="border-bottom: 1px solid #EEE; padding: 10px 5px; cursor: pointer;">
                    <a href="#" ng-bind="device.deviceId" style="text-decoration: none; font-size: 12px; color: #555;"></a>
                </li>
            </ul>
        </div>
    </div>
    <div style="display: table-cell;">
        <div>
            <ui-gmap-google-map center='map.center' zoom='map.zoom' style="">
                <ui-gmap-marker coords="marker.coords" options="marker.options" events="marker.events" idkey="marker.id">
                </ui-gmap-marker>
            </ui-gmap-google-map>
        </div>
    </div>
</div>
